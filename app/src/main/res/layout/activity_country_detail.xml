<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="countryName"
            type="String" />
        <variable
            name="countryPopulation"
            type="String" />
        <variable
            name="countryCurrency"
            type="String" />
        <variable
            name="countryLanguages"
            type="String" />
        <variable
            name="countryCapital"
            type="String" />
        <variable
            name="countryLatLong"
            type="String" />
        <variable
            name="backArrowClick"
            type="com.example.countryinfo.activities.CountryDetailActivity" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CountryDetailActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/countryFlagIv"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backArrowIv"
            android:src="@drawable/back_arrow_icon"
            android:padding="10dp"
            android:onClick="@{() -> backArrowClick.onBackPressed()}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/countryNameTv"
            android:layout_below="@id/countryFlagIv"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:text="@{countryName}"/>

        <LinearLayout
            android:id="@+id/countryPopCurrencyLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/countryNameTv"
            android:layout_marginTop="20dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/countryPopTv"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"
                    android:text="@{countryPopulation}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/population"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/countryCurrencyTV"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"
                    android:text="@{countryCurrency}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/currency"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"/>
            </LinearLayout>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/languageTypesTV"
            android:textSize="14dp"
            android:textColor="@color/darkGrey"
            android:layout_below="@id/countryPopCurrencyLL"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@{countryLanguages}"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/languagesTv"
            android:layout_below="@id/languageTypesTV"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:text="@string/languages"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/countryCapitalLatLongLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/languagesTv"
            android:layout_marginTop="20dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/countrycCapitalTV"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"
                    android:text="@{countryCapital}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/capital"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/countryLatLongTV"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"
                    android:text="@{countryLatLong}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/latlong"
                    android:textColor="@color/darkGrey"
                    android:gravity="center"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

</layout>
